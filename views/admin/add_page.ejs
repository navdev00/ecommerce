 <%-include('../partials/adminheader'); -%>

<h2 class="text-center mt-5"> Add Page</h2>



<div class="container justify-content-center">
    <a href="/admin/pages" class="btn btn-primary mt-5 mb-5"> Back to Pages</a>
    <form action="/admin/pages/add-page" method="POST">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" name="title" class="form-control" id="" 
                placeholder="Enter Text"  value="<%= title %>">
            
        </div>
        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" name="slug" value="<%= slug %>" class="form-control" id="" placeholder="slug">
        </div>
        <div class="form-group">
            <label for="">Content</label>
            <textarea class="form-control rounded-0" id="ta" rows="10" name="content"> <%= content %> </textarea>
          </div>
          
        
        <input type="hidden" value="id">
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    
</div>




<%- include('../partials/adminfooter'); -%>