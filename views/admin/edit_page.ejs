 
 <%- include ('../partials/adminheader') -%>

 <h2 class=" page-title text-center mt-5"> Edit Page</h2>



<div class="container">
    <a href="/admin/pages" class="btn btn-primary mt-5 mb-5"> Back to Pages</a>

    <form  method="POST" action="/admin/pages/edit-page/<%= id %>">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" " name="title" class="form-control" 
                placeholder="Enter Text" value="<%= title %>">
            
        </div>
        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" value="<%= slug %>" name="slug" class="form-control"  placeholder="slug"  >
        </div>
        <div class="form-group">
            <label for="">Content</label>
            <textarea class="form-control rounded-0"  id="ta" rows="10" name="content" ><%=content%></textarea>
          </div>
          
          
        
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>
    
</div>



<%- include('../partials/adminfooter'); -%>