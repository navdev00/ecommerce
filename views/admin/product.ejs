<%- include('../partials/adminheader'); -%>




    <div class="container">
        <h2 class="page-title text-center mt-2 mb-4">Products</h2>

        <a href="/admin/products/add-product" class="btn btn-primary mb-4"> Add a new Product</a>


        <% if (count> 0){ %>


            <table id="table_id" class="table" >
                <thead>
                    <tr>

                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category</th>
                        <th scope="col">Product Image</th>
                        <th scope="col"><i class="far fa-edit"></i> Edit</th>
                        <th scope="col"><i class="far fa-trash-alt"></i> Delete</th>
                    </tr>
                </thead>
                <tbody>

                    <% products.forEach(function(product){%>

                        <tr>

                            <td>
                                <%= product.title %>
                            </td>

                            <td> â‚¹ <%= parseFloat(product.price).toFixed(2) %>
                            </td>

                            <td>
                                <%= product.category %>
                            </td>

                            <td>
                                <% if (product.image=="" ) { %>
                                    <img id="emptyImage" src="/img/empty-image.png" alt="">

                                    <% } else { %>
                                        <img id="emptyImage" src="/product_images/<%=product._id%>/<%=product.image%>"
                                            alt="">

                                        <% } %>

                            </td>

                            <td>
                                <a href="/admin/products/edit-product/<%= product._id %>">Edit</a>

                            </td>

                            <td>
                                <a href="/admin/products/delete-product/<%= product._id %>"
                                    onclick="return confirm('Are you sure you want to delete this?');"> Delete</a>

                            </td>


                        </tr>

                        <% });%>


                </tbody>
            </table>



    </div>


    <% } else{ %>






        <div class="container">




            <h1 class="mt-2 ">There is no product</h1>
            <img src="/img/empty.gif" alt="">






        </div>


        <% } %>









            <!-- // data table -->

            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">

            <script type="text/javascript" charset="utf8"
                src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>


            <script>



                // data table

                $(document).ready(function () {
                    $('#table_id').DataTable();
                });
            </script>



            <%- include('../partials/adminfooter'); -%>