<%- include('../partials/adminheader'); -%>


    <div class="container">
        <h2 class="page-title text-center mt-2 mb-4"> Pages</h2>

        <a href="/admin/pages/add-page" class="btn btn-primary mb-4"> Add a new Page</a>


        <table class="table table-striped">
            <thead>
                <tr>

                    <th scope="col">Title</th>
                    <th scope="col"><i class="far fa-edit"></i> Edit</th>
                    <th scope="col"><i class="far fa-trash-alt"></i> Delete</th>
                </tr>
            </thead>
            <tbody>

                <% pages.forEach(function(page){%>

                    <tr>

                        <td>
                            <%=page.title%>
                        </td>
                        <td>
                                <a href="/admin/pages/edit-page/<%=page._id%>">Edit</a>
                            
                        </td>

                        <% if(page.slug== "home" ){ %>

                            <td></td>

                         <%   }else{ %>

                            <td>
                                    <a href="/admin/pages/delete-page/<%=page._id%>" onclick="return confirm('Are you sure you want to delete this?');">  Delete</a>
                              
                            </td>
                          <%  }; %>

                    </tr>

                    <% });%>


            </tbody>
        </table>



    </div>





    <%- include('../partials/adminfooter'); -%>